<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.debs.SambunganBautTipeTumpu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Profile"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnProfile"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Mutu Baja"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnMutuBaja"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Mutu Baut (Fub)"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnMutuBaut"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="248dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/jmlhBidangGeser"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Jumlah Bidang Geser (m)"/>
            </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="buah"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/textView" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Kondisi Baut Pada Bidang Geser (R)"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnJenisBaut"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Diameter Baut (db1)"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spnDiameterBaut"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="mm"
                    android:layout_marginLeft="50dp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="248dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/jmlhBautKeseluruhan"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Jumlah Baut Keseluruhan (n1)"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="47dp"
                android:layout_height="67dp"
                android:text="buah"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="248dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/jmlhBautDalamSatuGaris"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Jumlah Baut Dalam 1 Garis (n2)"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="47dp"
                android:layout_height="67dp"
                android:text="buah"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="248dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/nu"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Nu "/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="47dp"
                android:layout_height="67dp"
                android:text="kN"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />
            </LinearLayout>
            <Button
                android:layout_width="152dp"
                android:layout_height="45dp"
                android:id="@+id/btnHitung"
                android:text="Hitung"
                android:background="@drawable/btn_submit_rounded_primary"
                android:textColor="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ketmn"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/rn1"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:hint="Rn1 (Baut Putus)"/>
            </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:text="kN/baut"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_gravity="left">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ketmn"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/rn2"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Rn2 (Pelat Sobek)"/>
            </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:text="kN/sobekan"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/editHasil"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Hasil"/>
            </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_gravity="left">
            <android.support.design.widget.TextInputLayout
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/rnt"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Rnt"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="47dp"
                android:layout_height="67dp"
                android:text="kN"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_gravity="left">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ketmn"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/Nn"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:hint="Nn (Batang yang di sambung)"/>
            </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/txtRnt2"
                        android:layout_width="120dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:hint="Rnt"/>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:gravity="center"
                    android:id="@+id/ketentuan2"
                    android:src="@drawable/img_kurang"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_gravity="right">
                        <EditText
                            android:layout_gravity="right"
                            android:id="@+id/txtNn2"
                            android:layout_width="119dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="0"
                            android:hint="Nu"
                            android:gravity="left"/>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="kN"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/batangTarik"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Sambungan"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/txtRnt"
                        android:layout_width="120dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:hint="Rnt"/>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:gravity="center"
                    android:id="@+id/ketentuan"
                    android:src="@drawable/img_kurang"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ketmn"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_gravity="right">
                        <EditText
                            android:layout_gravity="right"
                            android:id="@+id/txtNn"
                            android:layout_width="119dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="0"
                            android:hint="Nn"
                            android:gravity="left"/>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="kNm"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/baut"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Kategori Sambungan"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tampilanText"
                android:textColor="@color/btn_context_menu_text_red"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>