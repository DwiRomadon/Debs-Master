<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Profil Baja"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merupakan jenis element struktur baja yang akan digunakan."
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Mutu Baja"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merupakan sebuah mutu baja yang digunakan dalam sistem penyambungan dalam satuan Mpa."
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Pembebanan (Mu)"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merupakan sebuah beban - beban total (ultimate) yang ingin direncanakan pada satuan kN."
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="•	Gaya Geser (Vu)"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merupakan sebuah gaya geser total (ultimate) yang ingin di rencanakan."
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="•	Jarak Sokongan Lateral (L)"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merupakan sebuah jarak pada sokongan yang terbentang lateral yang akan direncanakan pada satuan mm."
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="•	Kuat Nominal Lentur (Mn)"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="merupakan sebuah kekuatan lentur pada balok pada profil yang digunakan."
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="•	Kuat Nominal Geser (Vn)"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merupakan sebuah kekuatan geser pada balok pada profil yang di gunakan."
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="•	Kontrol Kekuatan Balok Lentur (ØMn)"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merupakan kekuatan sebuah penampang yang mana hasil Mn tersebut dikalikan dengan faktor reduksi sebesar (0.9) dalam satuan kN."
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="•	Kontrol Kekuatan Balok Geser (ØVn)"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merupakan kekuatan sebuah penampang yang mana hasil Vn tersebut dikalikan dengan faktor reduksi sebesar (0.9) dalam satuan kN."
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"/>
</LinearLayout>
