<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.debs.LenturBalok">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Profile"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnProfile"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Mutu Baja"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnMutuBaja"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp">
                <Button
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:text="Check Kekompakan Penampang"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:id="@+id/hitungPelatSayap"
                    android:background="@drawable/btn_submit_rounded_pink"/>
            </LinearLayout>
            <View
                android:layout_marginTop="9dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/jarakSokongLateral"
                        android:layout_width="218dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Panjang Balok (L)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="mm"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <TextView
                android:layout_width="155dp"
                android:gravity="center"
                android:layout_height="25dp"
                android:text="PEMBEBANAN"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanMati"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Mati (DL)"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/textView7" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanHidup"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Hidup (LL)"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/textView8" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanAtap"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Atap (La)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanHujan"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Hujan (H)"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/textView9" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanAngin"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Angin (W)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanGempa"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Gempa (E)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_marginTop="15dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Hitung"
                    android:id="@+id/btnHitung"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:background="@drawable/btn_submit_rounded_pink"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="208dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/momenMaximum"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:hint="Momen Maksimum (MU)"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="47dp"
                android:layout_height="67dp"
                android:text="kNm"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/momenNominal"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:hint="Momen Nominal (MN)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kNm"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontrol Kekuatan Penampang : "
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/txtMu"
                        android:layout_width="120dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:hint="MU"/>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:gravity="center"
                    android:id="@+id/ketentuan"
                    android:src="@drawable/img_kurang"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ketmn"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_gravity="right">
                    <EditText
                        android:layout_gravity="right"
                        android:id="@+id/txtMn"
                        android:layout_width="119dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:hint="MN"
                        android:gravity="left"/>
                </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="kNm"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:text="Kuat"
                    android:background="@drawable/btn_submit_rounded_green"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:id="@+id/txtAman"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:text="Tidak Kuat"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:background="@drawable/btn_submit_rounded_red"
                    android:id="@+id/txtTdkAman"
                    android:textColor="#fff"/>
            </RelativeLayout>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/a"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/b"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>