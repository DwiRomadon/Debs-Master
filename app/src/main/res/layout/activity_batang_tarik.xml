<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.debs.BatangTarik">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Profil"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnProfile"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Mutu Baja"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnMutuBaja"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanMati"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Mati (DL)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanHidup"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Hidup (LL)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanAtap"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Atap (La)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanHujan"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Hujan (H)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanAngin"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Angin (W)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanGempa"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Gempa (E)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <Button
                android:layout_width="152dp"
                android:layout_height="45dp"
                android:id="@+id/btnHitung"
                android:text="Hitung"
                android:background="@drawable/btn_submit_rounded_primary"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:text="Perencanaan Batang Tarik"
                android:background="@color/colorPrimary"
                android:layout_marginTop="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="208dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/nu"
                    android:text="0"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Nu"/>
            </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/leleh"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:enabled="false"
                        android:inputType="numberDecimal"
                        android:hint="Leleh"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/fraktur"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:enabled="false"
                        android:inputType="numberDecimal"
                        android:hint="Fraktur"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ketmn"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/ketNn"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:enabled="false"
                        android:inputType="numberDecimal"
                        android:hint="Nn"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ketmn"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/txtNn"
                        android:layout_width="120dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:enabled="false"
                        android:hint="Nn"/>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:gravity="center"
                    android:id="@+id/operator"
                    android:src="@drawable/lebih"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_gravity="right">
                        <EditText
                            android:layout_gravity="right"
                            android:id="@+id/txtKetNu"
                            android:layout_width="119dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="0"
                            android:hint="Nu"
                            android:enabled="false"
                            android:gravity="left"/>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="47dp"
                        android:layout_height="67dp"
                        android:text="kN"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:text="Kuat"
                    android:background="@drawable/btn_submit_rounded_green"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:id="@+id/txtAman"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:text="Tidak Kuat"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:background="@drawable/btn_submit_rounded_red"
                    android:id="@+id/txtTdkAman"
                    android:textColor="#fff"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="122dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnLuasNeto"
                    android:text="Luas Neto"
                    android:background="@drawable/btn_submit_rounded_primary"
                    android:textColor="#fff"/>
                <Button
                    android:layout_width="122dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/btnBlokGeser"
                    android:text="Blok Geser"
                    android:background="@drawable/btn_submit_rounded_primary"
                    android:textColor="#fff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/hasil"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:enabled="false"
                        android:visibility="gone"
                        android:inputType="numberDecimal"
                        android:hint="Keterangan"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>