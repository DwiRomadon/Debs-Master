<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.debs.BatangTekan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Profile"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnProfile"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Mutu Baja"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnMutuBaja"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Tumpuan"
                android:layout_gravity="left"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnTumpuan"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="155dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/bentangBaja"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Bentang Baja"/>
            </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="mm"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <TextView
                android:layout_width="155dp"
                android:gravity="center"
                android:layout_height="25dp"
                android:text="PEMBEBANAN"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanMati"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Mati (DL)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanHidup"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Hidup (LL)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanAtap"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Atap (La)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanHujan"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Hujan (H)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanAngin"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Angin (W)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="208dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/bebanGempa"
                        android:layout_width="208dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:hint="Beban Gempa (E)"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="47dp"
                    android:layout_height="67dp"
                    android:text="kN"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <Button
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:id="@+id/btnHitung"
                android:text="Hitung"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:background="@drawable/btn_submit_rounded_pink"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ketmn"
                    android:id="@+id/imageView2" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/txtKetNn"
                        android:layout_width="120dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:enabled="false"
                        android:hint="Nn"/>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:gravity="center"
                    android:src="@drawable/img_kurang"
                    android:id="@+id/ketentuan"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_gravity="right">
                        <EditText
                            android:layout_gravity="right"
                            android:id="@+id/txtNu"
                            android:layout_width="119dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="0"
                            android:hint="Nu"
                            android:enabled="false"
                            android:gravity="left"/>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="kN"
                        android:gravity="center"
                        android:layout_marginLeft="50dp"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:textColor="#fff"
                    android:layout_marginTop="2dp"
                    android:text="Kuat"
                    android:id="@+id/kuat"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:background="@drawable/btn_submit_rounded_green"/>
                <TextView
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:id="@+id/tidakKuat"
                    android:layout_marginTop="2dp"
                    android:text="Tidak Kuat"
                    android:gravity="center"
                    android:background="@drawable/btn_submit_rounded_red"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>